  .user-info{
    display: flex;
    align-items: center;
    .avatar{
      width: 80rpx;
      height: 80rpx;
      border-radius: 50%;
      margin-right: 30rpx;
    }
    .name-time{
      flex:1;
      display: flex;
      align-items: baseline;
      .name{
        flex:1;
        font-size: 28rpx;
        color:#108ee9;
      }
      .time{
        font-size: 23rpx;
        color:#999;
      }
    }
  }
  .reply-box{
    margin-left:110rpx;
    position: relative;
