    display: flex;
    flex-direction: column;
    .reply-cnt{
      margin-bottom:10rpx;
      .cnt{
        font-size: 28rpx;
        color:#333;
        float: left;
      }
    }
    .reply-btn{
      display: flex;
      justify-content: flex-end;
      .btn{
        float: right;
        background-color: #dedede;
        color:#999;
        padding:10rpx;
        border-radius: 10rpx;
        font-size: 22rpx;
        width:fit-content;
      }
    }    
  }
  .i-say{
    margin-left:110rpx;
    border-radius: 5rpx;
    background-color: #ededed;
    padding:15rpx 10rpx;
    font-size: 26rpx;
    color:#666;

  }
}
.reply-record::after{
    content: '';
  right: 0rpx;
  bottom: 0rpx;
  border-bottom: 1rpx solid #eee;
